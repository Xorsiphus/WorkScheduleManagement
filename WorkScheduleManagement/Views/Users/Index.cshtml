@model IEnumerable<WorkScheduleManagement.Data.Entities.Users.ApplicationUser>
@{
    ViewBag.Title = "Список пользователей";
}

<table class="table">
    <tr>
        <th>Email</th><th>ФИО</th><th>Количество отработанных дней в текущем году</th><th>Количество неиспользованных дней отпуска в текущем году</th><th>Количество неиспользованных дней отпуска за прошедшие года</th><th>Количество дней отгула в текущем году</th><th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.FullName</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>